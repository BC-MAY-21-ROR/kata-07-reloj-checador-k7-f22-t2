
<div class="header">
  <% if admin_signed_in? && !current_page?("") %>
    <div class="container__menu">
      <ul class="menu">
        <li> <%= link_to "Branches", branches_path, class: "menuItem"%> </li>
        <li> <%= link_to "Create branches", new_branch_path, class: "menuItem"%> </li>
        <li> <%= link_to "Employees", employees_path, class: "menuItem"%> </li>
        <li> <%= link_to "Create Employees", new_employee_path, class: "menuItem" %> </li>
        <li> <%= link_to "Reports", report_employees_path, class: "menuItem" %> </li>
      </ul>

      <button class="hamburger">
        <i class="menuIcon material-icons">menu </i>
